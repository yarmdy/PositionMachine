<UserControl x:Class="ZEHOU.PM.Label.UI.TopButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZEHOU.PM.Label.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="16" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" BorderThickness="1,1,1,1" PreviewMouseLeftButtonDown="UserControl_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="UserControl_PreviewMouseLeftButtonUp" >
    
    <Grid>
        <DockPanel LastChildFill="True">
            <Image  Stretch="Uniform" StretchDirection="Both" DockPanel.Dock="Left" Name="imgIco" ></Image>
            <Label VerticalAlignment="Center" Padding="5 0 0 0" Name="lbText"></Label>
        </DockPanel>
        <Button Opacity="0" Click="Button_Click" ></Button>
    </Grid>
    
</UserControl>
