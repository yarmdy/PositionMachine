<Application x:Class="ZEHOU.PM.Label.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ZEHOU.PM.Label"
             StartupUri="Login.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="tabclose">
            <Setter Property="Height" Value="16"></Setter>
            <Setter Property="Width" Value="16"></Setter>
            <Setter Property="DockPanel.Dock" Value="Right"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Margin" Value="20,0,0,0"></Setter>
            <Setter Property="FontSize" Value="10"></Setter>
            <Setter Property="BorderBrush" Value="#FFB7B7B7"></Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFFF8F8" Offset="0"/>
                        <GradientStop Color="Red" Offset="1"/>
                        <GradientStop Color="#FFFFEBEB" Offset="0.346"/>
                        <GradientStop Color="#FEFDB5B5" Offset="0.356"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
